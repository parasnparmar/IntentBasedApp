<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_purple"

    tools:context=".Tigers">
    <ImageView
        android:id="@+id/imgTiger1"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_margin="10dp"
        android:layout_marginLeft="8dp"
        android:src="@drawable/tiger1"
        android:background="@color/purple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.272" />

    <ImageView
        android:id="@+id/imgTiger2"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_margin="10dp"
        android:layout_marginLeft="104dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/tiger2"
        android:background="@color/purple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imgTiger1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.28" />

    <ImageView
        android:id="@+id/imgTiger3"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_margin="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/tiger3"
        android:background="@color/purple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgTiger1"
        app:layout_constraintVertical_bias="0.355" />

    <ImageView
        android:id="@+id/imgTiger4"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_margin="10dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/tiger4"
        android:background="@color/purple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imgTiger3"
        app:layout_constraintTop_toBottomOf="@id/imgTiger2"
        app:layout_constraintVertical_bias="0.331" />

</androidx.constraintlayout.widget.ConstraintLayout>